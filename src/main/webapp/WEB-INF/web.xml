<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                             http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

  <listener>
    <listener-class>com.example.batch.WebAppContextListener</listener-class>
  </listener>

  <servlet>
    <servlet-name>BatchServlet</servlet-name>
    <servlet-class>com.example.batch.BatchServlet</servlet-class>
    <async-supported>true</async-supported>
  </servlet>
  <servlet-mapping>
    <servlet-name>BatchServlet</servlet-name>
    <url-pattern>/api/batch</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>InternalProcessServlet</servlet-name>
    <servlet-class>com.example.batch.InternalProcessServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>InternalProcessServlet</servlet-name>
    <url-pattern>/api/internal/*</url-pattern>
  </servlet-mapping>
</web-app>
